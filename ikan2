-------------------------------------------
----- =======[ FISH NOTIFICATION FEATURE ]
-------------------------------------------

local webhookPath = nil
local FishWebhookEnabled = false
local LocalPlayer = game:GetService("Players").LocalPlayer
local HttpService = game:GetService("HttpService")

-- Webhook Key Input
FishNotif:Input({
    Title = "Webhook Key",
    Desc = "Paste your Discord webhook key here",
    Placeholder = "id/token",
    Callback = function(text)
        webhookPath = text
        WindUI:Notify({
            Title = "Webhook Set",
            Content = "Webhook saved successfully!",
            Duration = 5,
            Icon = "circle-check"
        })
    end
})

-- Toggle Button
FishNotif:Button({
    Title = "Toggle Notifications",
    Desc = "Turn fish notifications ON or OFF",
    Callback = function()
        FishWebhookEnabled = not FishWebhookEnabled
        WindUI:Notify({
            Title = "Fish Notification",
            Content = FishWebhookEnabled and "✅ Notifications Activated!" or "❌ Notifications Deactivated!",
            Duration = 5,
            Icon = FishWebhookEnabled and "bell-ring" or "bell-off"
        })
    end
})

-- Dropdown Categories
local SelectedCategories = {}
FishNotif:Dropdown({
    Title = "Select Fish Categories",
    Desc = "Choose which categories to send to Discord",
    Values = {"Secret", "Legendary", "Mythic", "Epic"},
    Multi = true,
    Default = {"Secret"},
    Callback = function(selected)
        SelectedCategories = selected
        WindUI:Notify({
            Title = "Fish Category Updated",
            Content = "Now tracking: " .. table.concat(SelectedCategories, ", "),
            Duration = 5,
            Icon = "circle-check"
        })
    end
})

-- Test Webhook Button
FishNotif:Button({
    Title = "Test Webhook",
    Desc = "Send a test notification to Discord",
    Callback = function()
        if not webhookPath or webhookPath == "" then
            WindUI:Notify({
                Title = "Webhook Error",
                Content = "⚠️ No webhook set!",
                Duration = 5,
                Icon = "ban"
            })
            return
        end

        local WebhookURL = "https://discord.com/api/webhooks/" .. webhookPath
        local username = LocalPlayer.DisplayName
        local userId = LocalPlayer.UserId
        local avatarUrl = string.format(
            "https://www.roblox.com/headshot-thumbnail/image?userId=%d&width=420&height=420&format=png",
            userId
        )

        local testData = {
            ["username"] = "FishBot",
            ["embeds"] = {{
                ["title"] = "🎣 Test Fish Notification",
                ["description"] = string.format([[
Hei **%s**! 🎣  
You have successfully caught a fish.

🧾 Name : **Epic Test Fish**  
🌟 Rarity : **Epic**  
💰 Sell Price : **12345**
]], username),
                ["color"] = tonumber("0x00bfff"),
                ["thumbnail"] = { ["url"] = avatarUrl },
                ["footer"] = { ["text"] = "Fish Notification • " .. os.date("%d %B %Y, %H:%M:%S") }
            }}
        }

        local requestFunc = syn and syn.request or http and http.request or http_request or request or fluxus and fluxus.request
        if requestFunc then
            requestFunc({
                Url = WebhookURL,
                Method = "POST",
                Headers = { ["Content-Type"] = "application/json" },
                Body = HttpService:JSONEncode(testData)
            })
            WindUI:Notify({
                Title = "Webhook Test",
                Content = "✅ Test notification sent to Discord!",
                Duration = 5,
                Icon = "circle-check"
            })
        else
            WindUI:Notify({
                Title = "Executor Error",
                Content = "⚠️ Your executor doesn’t support HTTP requests!",
                Duration = 5,
                Icon = "ban"
            })
        end
    end
})
